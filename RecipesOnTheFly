        let currentFilter = 'all';
        let filteredRecipes = [...recipes];

        // Fun√ß√£o para renderizar as receitas
        function renderRecipes() {
            const grid = document.getElementById('recipesGrid');
            grid.innerHTML = '';

            filteredRecipes.forEach(recipe => {
                const card = document.createElement('div');
                card.className = 'recipe-card';
                card.onclick = () => openModal(recipe);

                card.innerHTML = `
                    <img src="${recipe.image}" alt="${recipe.title}" class="recipe-image">
                    <div class="recipe-content">
                        <h3 class="recipe-title">${recipe.title}</h3>
                        <div class="recipe-meta">
                            <span>‚è±Ô∏è ${recipe.time}</span>
                            <span>üë• ${recipe.servings}</span>
                            <span>üìä ${recipe.difficulty}</span>
                        </div>
                        <p class="recipe-description">${recipe.description}</p>
                        <div class="recipe-tags">
                            ${recipe.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                        </div>
                    </div>
                `;

                grid.appendChild(card);
            });
        }

        // Fun√ß√£o para filtrar receitas
        function filterRecipes(category) {
            currentFilter = category;
            
            // Atualizar bot√µes ativos
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            // Filtrar receitas
            if (category === 'all') {
                filteredRecipes = [...recipes];
            } else {
                filteredRecipes = recipes.filter(recipe => recipe.category === category);
            }

            renderRecipes();
        }

        // Fun√ß√£o para buscar receitas
        function searchRecipes() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            if (searchTerm === '') {
                filteredRecipes = currentFilter === 'all' ? [...recipes] : recipes.filter(recipe => recipe.category === currentFilter);
            } else {
                filteredRecipes = recipes.filter(recipe => 
                    recipe.title.toLowerCase().includes(searchTerm) ||
                    recipe.description.toLowerCase().includes(searchTerm) ||
                    recipe.tags.some(tag => tag.toLowerCase().includes(searchTerm))
                );
            }

            renderRecipes();
        }

        // Fun√ß√£o para abrir modal
        function openModal(recipe) {
            const modal = document.getElementById('recipeModal');
            const modalTitle = document.getElementById('modalTitle');
            const modalBody = document.getElementById('modalBody');

            modalTitle.textContent = recipe.title;

            modalBody.innerHTML = `
                <div class="recipe-details">
                    <div class="ingredients">
                        <h3>üçΩÔ∏è Ingredientes</h3>
                        <ul>
                            ${recipe.ingredients.map(ingredient => `<li>${ingredient}</li>`).join('')}
                        </ul>
                    </div>
                    <div class="instructions">
                        <h3>üë®‚Äçüç≥ Modo de Preparo</h3>
                        <ol>
                            ${recipe.instructions.map(instruction => `<li>${instruction}</li>`).join('')}
                        </ol>
                    </div>
                </div>
                <div style="text-align: center; margin-top: 20px;">
                    <p><strong>Tempo:</strong> ${recipe.time} | <strong>Dificuldade:</strong> ${recipe.difficulty} | <strong>Por√ß√µes:</strong> ${recipe.servings}</p>
                </div>
            `;

            modal.style.display = 'block';
        }

        // Fun√ß√£o para fechar modal
        function closeModal() {
            document.getElementById('recipeModal').style.display = 'none';
        }

        // Fechar modal ao clicar fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('recipeModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Buscar ao pressionar Enter
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchRecipes();
            }
        });

        // Inicializar o app
        renderRecipes();
    </script>
